#:kivy 1.0.9

<LongBench>:
#    text: "hi"
#    size_hint: 1, 1
    canvas:
        Color:
            #rgb: .42, .26, .08
            rgb: .3, .16, 0
        Rectangle:
            pos: self.x + 2, self.y + 1
            size: self.width -4, 2
        Rectangle:
            pos: self.x + 2, self.y + 1
            size: 2, self.height / 2
        Rectangle:
            pos: self.x + self.width - 2 - 2, self.y + 1
            size: 2, self.height / 2

<MediumBench>:
    canvas:
        Color:
            #rgb: .42, .26, .08
            rgb: .3, .16, 0
        Rectangle:
            pos: self.x + 2, self.y + 1
            size: self.width -4, 2
        Rectangle:
            pos: self.x + 2, self.y + 1
            size: 2, self.height / 2
        Rectangle:
            pos: self.x + self.width - 2 - 2, self.y + 1
            size: 2, self.height / 2

<Chair>:
    canvas:
        # draw folding chair icon
        Color:
            #rgb: .16, .16, .13
            rgb: .6, .6, .5
        Line:
            # back to front, use height as bounding size
            points: self.x + self.width - 4, self.y + self.height - 4, self.x + self.width - self.height + 10, self.y +  4
        Line:
            # back floor to seat
            points: self.x + self.width - 6, self.y +  4, self.x + self.width - self.height + 8, self.y + (self.height / 2)
        Line:
            # seat
            points: self.x + self.width - 6, self.y + (self.height / 2), self.x + self.width - self.height + 6, self.y + (self.height / 2)

<InputArea>:
    canvas.before:
        Color:
            rgba: .25, .25, .3, 1
        Rectangle:
            pos: self.pos
            size: self.size


<ChapelMap>:
    canvas.before:
        Color:
            rgb: .1, .1, .3
            #rgba: .1, 0, .4, 1
        Rectangle:
            pos: self.pos
            size: self.size
      
