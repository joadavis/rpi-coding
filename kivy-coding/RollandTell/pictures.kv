#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

FloatLayout:
    roll_butt: roll_button
    save_butt: save_button

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'rollandtell-background.jpg'
            size: self.size

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 84
        Image:
            size_hint: None, None
            size: 24, 24
            source: 'data/logo/kivy-icon-24.png'
        Label:
            height: 24
            text_size: self.width, None
            color: (1, 1, 1, .8)
            text: 'Roll and Tell v3'

        Button:
            id: roll_button
            text: 'Roll'

        Button:
            id: save_button
            text: 'Save'



<Picture>:
    # each time a picture is created, the image can delay the loading
    # as soon as the image is loaded, ensure that the center is changed
    # to the center of the screen.
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None

    Image:
        id: image
        source: root.source

        # create initial image to be 400 pixels width
        size: 52, 52/ self.image_ratio

        # add shadow background
        canvas.before:
            Color:
                rgba: 1,1,1,1
            BorderImage:
                source: 'shadow32.png'
                border: (6,6,6,6)
                size:(self.width+12, self.height+12)
                pos: (-6,-6)
